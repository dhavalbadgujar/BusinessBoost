{{>VisitorNav}}
<br><br>
    <center>
    <div class="container">

    <div class="card" style="width: 23rem;">
      <div class="card-header" style="background-color: #05386B;color: white;">
        <h2> <center><strong>Enter OTP</strong></center></h2>
      </div>
      <div class="card-body">
        <center>
        <form action="/checkOTP" method="post">

             <div class="form-group">
                 <a>OTP has been sent to you on your email , please enter it below .</a>
          </div>


          <div class="form-group">
            <input type="text" class="form-control" name="otp" placeholder=" 0 1 2 3"  required>
          </div>
        
         <input type="hidden" name="_csrf" value="{{ csrfToken }}">
           <div class="form-group">
            <button class="btn btn-outline-secondary" type="submit" id="button-addon1" style="background-color:#05386B ;color:white ;">
              <strong>Verify</strong></button>
          </div>
        </form></center>
          <div class="form-group">
                        {{#if hasErrors}}
                <div class="alert alert-danger" role="alert">
                    {{# each messages}}
                        <p> {{this}}</p>
                    {{/each}}
                </div>
                {{/if}}
      </div>
    </div>
</center>

