    <center>
    <div class="container">

    <div class="card" style="width: 23rem;">
      <div class="card-header" style="background-color: #05386B;color: white;">
        <h2> <center><strong>Reset Password</strong></center></h2>
      </div>
      <div class="card-body">
        <center>
        <form action="/resetPassword" method="post"> 

          <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Enter new password"  required>
          </div>

          <div class="form-group">
            <input type="password" class="form-control" name="reenter" placeholder="Enter confirm new password"  required>
          </div>
          
         <input type="hidden" name="_csrf" value="{{ csrfToken }}">
           <div class="form-group">
            <button class="btn btn-outline-secondary" type="submit" id="button-addon1" style="background-color:#05386B ;color:white ;">
              <strong>Submit</strong></button>
          </div>
        </form></center>
          <div class="form-group">
                        {{#if hasErrors}}
                <div class="alert alert-danger" role="alert">
                    {{# each msg1}}
                        <p> {{this}}</p>
                    {{/each}}
                </div>
                {{/if}}
      </div>
    </div>
</center>

