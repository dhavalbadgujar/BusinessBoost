{{>VisitorNav}}

    <br><br>
    <center>
    <div class="container">

    <div class="card" style="width: 28rem;">
      <div class="card-header" style="background-color: #05386B;color: white;">
        <h2> <center><strong>Sign in</strong></center></h2>
      </div>
      <div class="card-body">
        <center>
        <form action="/visitor/signin" method="post">
          <div class="form-group">
            <input type="email" class="form-control" name="email" placeholder="E-mail">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Passoword">
          </div><input type="hidden" name="_csrf" value="{{ csrfToken }}"> 
           <div class="form-group">
            <button class="btn btn-outline-secondary" type="submit" id="button-addon1" style="background-color:#05386B ;color: white ;">
              <strong>Submit</strong></button>
          </div><!-- {{ csrfToken }} -->
        </form>
        
           <div class="form-group">
            
             <a href="/emailotp" style="color:#05386B ;"> <strong>Forgot password?</strong></a>
          </div>

        </center>

            <div class="form-group">
                        {{#if hasErrors}}
                <div class="alert alert-danger" role="alert">
                    {{# each messages}}
                        <p> {{this}}</p>
                    {{/each}}
                </div>
                {{/if}}
      </div>

      </div>
    </div>
</center>

