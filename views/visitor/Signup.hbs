{{>VisitorNav}}

    <br><br>
    <center>
    <div class="container">

    <div class="card" style="width: 32rem;">
      <div class="card-header" style="background-color: #05386B;color: white;">
        <h2> <center><strong>Register Your Business</strong></center></h2>
      </div>
      <div class="card-body">
        <center>
        <form action="/visitor/signup" method="post">

          <div class="form-group">
            <input type="email" class="form-control" name="email" placeholder="E-mail" oninvalid="setCustomValidity('Enter valid Emailid')" required>
            <input type="hidden" class="form-control" name="password"  value="b1234" placeholder="Password">
          </div>
          <!--<div class="form-group">
            
            <input type="password" class="form-control" name="password"  placeholder="password">
          </div> -->
          <div class="form-group">
            <input type="text" class="form-control" name="contactno" placeholder="Contactno" pattern="^[6|7|8|9][0-9]{9}$" onkeypress='return event.charCode >=48 && event.charCode <= 57'  maxlength="10" minlength="10" oninvalid="setCustomValidity('Enter valid Contantno')" required>
          </div>
           <div class="form-group">
            <input type="text" class="form-control" name="name" placeholder="Name" pattern="^[a-zA-Z ]*$" required oninvalid="setCustomValidity('Enter valid name')">
          </div><input type="hidden" name="_csrf" value="{{ csrfToken }}">
           <div class="form-group">
            <button class="btn btn-outline-secondary" type="submit" id="button-addon1" style="background-color:#05386B ;color:white ;">
              <strong>Submit</strong></button>
          </div>
        </form></center>
          <div class="form-group">
                        {{#if hasErrors}}
                <div class="alert alert-danger" role="alert">
                    {{# each messages}}
                        <p> {{this}}</p>
                    {{/each}}
                </div>
                {{/if}}
      </div>
    </div>
</center>

